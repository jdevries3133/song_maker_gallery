server {
    server_name songmakergallery.com;

    location /favicon.ico {
        access_log off;
        log_not_found off;
        alias /home/ubuntu/song_maker_gallery/django_smg/static_root/frontend/favicon.ico;
    }
    location ^~ /static/ {
        alias /home/ubuntu/song_maker_gallery/django_smg/static_root/;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/ubuntu/song_maker_gallery/django_smg/run/gunicorn.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/songmakergallery.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/songmakergallery.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = songmakergallery.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name songmakergallery.com;
    return 404; # managed by Certbot
}
